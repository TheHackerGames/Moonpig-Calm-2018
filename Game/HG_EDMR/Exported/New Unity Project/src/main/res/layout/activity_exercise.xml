<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.moonpig.calm.calm.MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="0dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="316dp"
            android:layout_marginTop="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/beach" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="24dp"
                android:text="Introduction to the
Calm Technique"
                android:textColor="#424242"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="24dp"
                android:text="new"
                android:textColor="#545454"
                android:textSize="16sp" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignBaseline="@+id/textView2"
                android:layout_alignBottom="@+id/textView2"
                android:layout_alignParentEnd="true"
                android:background="@drawable/circle_shape" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="6 minutes"
                android:textColor="#545454"
                android:textSize="16sp" />


            <Button
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:background="@drawable/button_border"
                android:drawableRight="@drawable/icon_calm"
                android:letterSpacing="0.25"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:onClick="sendMessage"
                android:paddingStart="16dp"
                android:paddingTop="5dp"
                android:text="START"
                android:textAlignment="textStart"
                android:textColor="#00bff1"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="190dp"
                android:text="@string/exercise_description"
                android:textColor="#545454"
                android:textSize="16sp" />

        </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>